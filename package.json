{
  "name": "booking-api",
  "version": "1.0.0",
  "description": "",
  "_moduleAliases": {
    "~": "dist/src"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "prestart": "npm run build",
    "start": "func start",
    "test": "jest --verbose",
    "bundle": "npx swagger-cli bundle openapi/openapi.yaml -t yaml -o docs/openapi.yaml",
    "validate": "npx swagger-cli validate docs/openapi.yaml",
    "generate-docs": "npx @redocly/cli build-docs docs/openapi.yaml -o docs/index.html --title 'Booking Api Documentation'",
    "generate-ts": "npm run bundle && npx orval --config ./orval.config.js"
  },
  "dependencies": {
    "@azure/functions": "^4.0.0-alpha.9",
    "@types/jsonwebtoken": "^9.0.1",
    "bcryptjs": "^2.4.3",
    "date-fns": "^2.29.3",
    "durable-functions": "^3.0.0-alpha.4",
    "generate-password": "^1.7.0",
    "graphql-request": "^5.2.0",
    "jsonwebtoken": "^9.0.0",
    "module-alias": "^2.2.2",
    "mongoose": "^6.8.4",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.x",
    "date-fns-tz": "^2.0.0",
    "fs": "^0.0.1-security",
    "jest": "^29.5.0",
    "mongodb-memory-server": "^8.12.1",
    "orval": "^6.14.3",
    "ts-jest": "^29.0.5",
    "typescript": "^4.0.0"
  },
  "main": "dist/src/functions/*.js"
}
